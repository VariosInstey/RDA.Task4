            <materialDesign:PackIcon Kind="Close"
                                     VerticalAlignment="Top"
                                     HorizontalAlignment="Center"
                                         Foreground="White"
                                         Height="30"
                                         Width="30"
                                         Margin="0 0 530 0"
                                     x:Name="PackIcon"
                                         MouseDown="PackIcon_MouseDown"
                                         Cursor="Hand"/>
            <materialDesign:PackIcon Kind="Home" 
                                     VerticalAlignment="Top"
                                     HorizontalAlignment="Center"
                                     Foreground="White"
                                     Height="30"
